doctype html
html(lang="zh")
  head
    include head.pug

  body(style="opacity:0")
    header.head
      img.head-avatar.u-fl(src="/img/logo.png" alt="tabliu")
      h1.head-title.u-fl: a(href = config.root, title = config.title)
        = config.title
      include nav.pug

    main.main
      block main

    footer.foot
      div.foot-copy
        if theme.start_year != date(new Date(), 'YYYY')
          != 'Copyright' + ' ' + '&copy; ' + theme.start_year + '-' + date(new Date(), 'YYYY') + ' '
        else
          != 'Copyright' + ' ' + '&copy; ' + date(new Date(), 'YYYY') + ' '

        if config.author === 'Tabliu'
          a(href = config.root, title = config.title)
            = config.author
          != 'theme by' + ' '
          a(href="https://github.com/ochukai/hexo-theme-ochuunn/")
            != 'ochuunn'
          a(href="http://www.miibeian.gov.cn/" target="_blank")
            != '京ICP备13042587号-1'

    include ../plugins/google.pug

    != js('js/scroller')
    != js('js/main')
    <script>(function(){var src = (document.location.protocol == "http:") ? "http://js.passport.qihucdn.com/11.0.1.js?d8ae537cce9dbebc797b803cec7ed6ac":"https://jspassport.ssl.qhimg.com/11.0.1.js?d8ae537cce9dbebc797b803cec7ed6ac";document.write('<script src="' + src + '" id="sozz"><\/script>')})();</script>
